    "mysql": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/mysql",
        "--host=127.0.0.1",
        "--port=3306",
        "--user=${DB_USER}",
        "--password=${DB_PASSWORD}",
        "--database=${DB_NAME}"
      ]
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/fs",
        "--root=."
      ]
    },
    "git": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/git",
        "--repo=."
      ]
    },
    "openapi": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/openapi",
        "--spec=./openapi.yaml",
        "--base-url=${API_BASE_URL}"
      ]
    },
    "rest": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/http",
        "--base-url=${API_BASE_URL}",
        "--auth-header=Authorization:Bearer ${API_TOKEN}"
      ]
    },
    "redis": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/redis",
        "--host=127.0.0.1",
        "--port=6379",
        "--password=null"
      ]
    },
    "meilisearch": {
