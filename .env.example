APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# SEO Settings - set to false on test/staging environments
ROBOTS_ALLOW_INDEXING=false

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Entry Conditions / Passolution API Configuration
PASSOLUTION_API_URL=https://api.passolution.com
PDS_KEY=your_api_key_here
ENTRY_CONDITIONS_ENABLED=true
ENTRY_CONDITIONS_LOGGING_ENABLED=false
ENTRY_CONDITIONS_AVAILABLE_NATIONALITIES=DE,AT,CH

# Dashboard Feature Toggles
DASHBOARD_AIRPORTS_ENABLED=true
DASHBOARD_BOOKING_ENABLED=true

# Customer Authentication
CUSTOMER_REGISTRATION_ENABLED=true
CUSTOMER_LOGIN_ENABLED=true

# Navigation Menu Configuration
NAVIGATION_MENU_ENABLED=true
NAVIGATION_EVENTS_ENABLED=true
NAVIGATION_ENTRY_CONDITIONS_ENABLED=true
NAVIGATION_BOOKING_ENABLED=true
NAVIGATION_AIRPORTS_ENABLED=true
NAVIGATION_BRANCHES_ENABLED=true
NAVIGATION_CRUISE_ENABLED=true
NAVIGATION_CENTER_MAP_ENABLED=true

# Authentication Configuration
AUTHENTICATION_ENABLED=true

# Customer Authentication Configuration
CUSTOMER_REGISTRATION_ENABLED=true
CUSTOMER_EMAIL_VERIFICATION_REQUIRED=true
CUSTOMER_2FA_ENABLED=true

# Social Login Configuration
# Facebook OAuth
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_REDIRECT_URL="${APP_URL}/customer/auth/facebook/callback"

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL="${APP_URL}/customer/auth/google/callback"

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_REDIRECT_URL="${APP_URL}/customer/auth/linkedin/callback"

# Twitter (X) OAuth
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_REDIRECT_URL="${APP_URL}/customer/auth/twitter/callback"

# ============================================
# SSO Configuration (Service Provider)
# ============================================
SSO_VERSION=1.2.0
# Public key is stored in file: storage/app/sso/sso-public.key
# No environment variable needed when SSO_USE_ENV_KEYS=false
SSO_USE_ENV_KEYS=false

# ============================================
# Travel Detail Module Configuration
# ============================================
# Feature Toggle
TD_FEATURE_ENABLED=true

# PDS API Integration (for share links)
PDS_API_URL=http://127.0.0.1:8002
PDS_API_KEY=your_pds_api_key_here
PDS_API_TIMEOUT=30
TD_PDS_SHARE_LINK_ENABLED=true

# API Configuration
TD_API_RATE_LIMIT=100
TD_API_RATE_LIMIT_WINDOW=60

# Archival Configuration
TD_ARCHIVE_ENABLED=true
TD_ARCHIVE_DAYS=30
TD_ARCHIVE_BATCH_SIZE=1000
TD_ARCHIVE_USE_SEPARATE_DB=false

# Archive Database (optional, only if TD_ARCHIVE_USE_SEPARATE_DB=true)
# TD_ARCHIVE_DB_HOST=127.0.0.1
# TD_ARCHIVE_DB_PORT=3306
# TD_ARCHIVE_DB_DATABASE=travel_detail_archive
# TD_ARCHIVE_DB_USERNAME=root
# TD_ARCHIVE_DB_PASSWORD=

# Proximity Query Settings
TD_PROXIMITY_DEFAULT_RADIUS_KM=100
TD_PROXIMITY_MAX_RADIUS_KM=500

# Transfer Detection
TD_TRANSFER_MIN_MINUTES=30
TD_TRANSFER_MAX_MINUTES=2880
TD_TIGHT_CONNECTION_MINUTES=60

# Caching
TD_CACHE_AIRPORT_TTL=3600
TD_CACHE_COUNTRY_TTL=86400

# Logging
TD_LOGGING_ENABLED=true
TD_LOG_CHANNEL=travel_detail
TD_LOG_PAYLOADS=false
TD_IMPORT_LOG_RETENTION_DAYS=90

# Data Retention & Cleanup
TD_PURGE_ARCHIVED_YEARS=2
TD_SCHEDULED_CLEANUP_ENABLED=true
TD_CLEANUP_TIME=03:00
